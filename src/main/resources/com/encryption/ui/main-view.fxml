<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="600.0" prefWidth="680.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.encryption.ui.MainController">

    <top>
        <VBox spacing="6" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="6" left="12" right="12" top="12" />
            </padding>
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="String Encryptor" />
            <Label style="-fx-opacity: 0.8;" text="AES-GCM + PBKDF2（输入任意字符：大小写/数字/符号/中文都支持）" />
        </VBox>
    </top>

    <center>
        <VBox spacing="12">
            <padding>
                <Insets bottom="12" left="12" right="12" top="10" />
            </padding>

            <GridPane hgap="10" vgap="10">
                <columnConstraints>
                    <ColumnConstraints minWidth="120" prefWidth="120" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <Label text="密码（用于解密）：" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <PasswordField fx:id="passwordField" promptText="请输入密码（不会被保存）" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <Label text="明文：" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <TextArea fx:id="plainTextArea" prefRowCount="7" promptText="在这里输入要加密的原字符串…" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <Label text="密文（Base64）：" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextArea fx:id="cipherTextArea" prefRowCount="7" promptText="请输入&lt;原始字符串&gt;（Base64）" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="2" />

                <Label text="解密结果：" GridPane.columnIndex="0" GridPane.rowIndex="3" />
                <TextArea fx:id="decryptedTextArea" editable="false" prefRowCount="7" wrapText="true" GridPane.columnIndex="1" GridPane.rowIndex="3" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>
            </GridPane>

            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Button onAction="#onEncrypt" text="加密 -&gt;" />
                <Button onAction="#onDecrypt" text="&lt;- 解密" />
                <Button onAction="#onClear" text="清空" />
            </HBox>

            <Label fx:id="statusLabel" style="-fx-opacity: 0.85;" text="提示：Maven 会自动下载 JavaFX 依赖，无需手动放 lib。" />
        </VBox>
    </center>

</BorderPane>
